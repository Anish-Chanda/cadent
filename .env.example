# Database Configuration
POSTGRES_DSN=postgres://cadence_user:cadence_password@localhost:5432/cadence_db?sslmode=disable

# Database Connection Pool Configuration (optional - defaults shown)
DB_MAX_CONNS=5                           # Maximum number of connections in the pool
DB_MIN_CONNS=1                           # Minimum number of connections in the pool
DB_MAX_CONN_LIFETIME_MINUTES=60          # Maximum lifetime of a connection in minutes
DB_MAX_CONN_IDLE_TIME_MINUTES=30         # Maximum idle time of a connection in minutes

# Database credentials (for Docker Compose)
POSTGRES_USER=cadence_user
POSTGRES_PASSWORD=cadence_password
POSTGRES_DB=cadence_db

# Server Configuration
PORT=8080

# Logging Configuration
LOG_LEVEL=info
ENVIRONMENT=development

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
BASE_URL=http://localhost:8080
AVATAR_PATH=/tmp/avatars
TOKEN_DURATION_MINUTES=5
COOKIE_DURATION_HOURS=24

# Storage Configuration
# For local storage: local://path/to/storage
# For S3 storage: s3://bucket-name or s3://endpoint/bucket-name
STORAGE_DSN=local://./data

# Example production settings:
# LOG_LEVEL=warn
# ENVIRONMENT=production
# BASE_URL=https://cadence.example.com
# TOKEN_DURATION_MINUTES=15
# COOKIE_DURATION_HOURS=720  # 30 days
